[flake8]
max-line-length = 88
max-complexity = 10
select = E,W,F,C,N
extend-ignore = E203,W503,D100,D104,I001,I003,I004,I005

exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    docs/conf.py,
    .bmad-core,
    web-bundles

per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow long lines in config files
    **/config.py:E501
    # Relax docstring requirements for tests
    tests/*:D100,D101,D102,D103,D104,D105,D106,D107
    # Allow print statements in scripts
    scripts/*:T201

# Docstring conventions (Google style)
docstring-convention = google

# Naming conventions
classmethod-decorators = classmethod
staticmethod-decorators = staticmethod

# Import order settings (delegated to isort)
import-order-style = pep8
application-import-names = src